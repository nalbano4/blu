{
  "version": 2,
  "builds": [
    { "src": "frontend/dist/**", "use": "@vercel/static" },
    { "src": "backend/server.js", "use": "@vercel/node", "config": { "includeFiles": "backend/data/**" } }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/backend/server.js" },
    { "handle": "filesystem" },
    { "src": ".*", "dest": "/index.html" }
  ],
  "installCommand": "cd frontend && npm install && cd ../backend && npm install",
  "buildCommand": "cd frontend && npm run build"
}
